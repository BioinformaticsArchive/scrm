	keywords = {Coalescent, genealogy, linkage disequilibrium, Recombination},
	pages = {1387--1393},
	file = {Full Text PDF:/home/paul/Documents/Phd/Literatur/Zotero/storage/CB32E77U/McVean and Cardin - 2005 - Approximating the Coalescent with Recombination.pdf:application/pdf}
},

